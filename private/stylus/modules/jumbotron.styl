.jumbotron {
   fullBackgroundImage('../img/jumbotron_bg.jpg')
   z-index 2
   overflow hidden
   min-height 450px





   .largeTitle {
      position absolute
      width 100%
      color $color-white1
      @media $lg {
         bottom 50%
         left 50%
         transform translate(-40%, 50%)
      }
      @media $sm-md {
         display none
      }
   }
   .largeTitle:after {
      content '.'
      font-size 270px
      color $color-green1
   }






   .mrWolfContainer {
      max-width $grid-width
      min-height 1px
      margin-top auto
      @media $lg {
         right 0
      }
   }
   img {
      display flex
      flex-shrink 0
      min-height 1px
      @media $lg {
         width 40%
         margin-left 50%
      }
      @media $md {
         width 40%
         align-self flex-start
         margin-left 5%
      }
   }





   .mouseIndicator {
      @media $md-lg {
         position absolute
         width 30px
         height 50px
         bottom $space-3
         border-radius 14px
         border 2px solid rgba($color-white1, .6)
         transition border-color .5s ease
      }
      @media $sm-md {
         display none
      }
   }
   .mouseIndicator:hover {
      border-color $color-white1
   }
   .mouseIndicator:before {
      content ''
      display flex
      position absolute
      width 2px
      height 3px
      top 10px
      left 50%
      transform translateX(-50%)
      background-color rgba($color-white1, .6)
      animation scroll 2s linear infinite
      transition background-color .5s ease
   }
   .mouseIndicator:hover:before {
      background-color $color-white1
   }
   @keyframes scroll {
      0% {
         height 3px
      }
      50% {
         height 25px
      }
      100% {
         height 3px
      }
   }

}
