// general
*, *:before, *:after {
   box-sizing border-box
   position relative
   margin 0
   padding 0
}
body {
   background-color $color-blue1
   font-family 'Lato', sans-serif
   color $color-blue2
   -webkit-font-smoothing antialiased
}
body, div, section, header, footer, nav, aside, main, form {
   display flex
   flex-direction column
   align-items center
   width 100%
}
main {
   z-index 1
   max-width $grid-width
   min-height 1px
   background-color $color-gray1
   @media $md-lg {
      margin-bottom 350px
   }
   @media $sm {
      margin-bottom 300px
   }
}
button {
   appearance none
   background-color transparent
   border none
   outline none
   cursor pointer
}
img, h1, h2, h3, p, svg {
   width 100%
}
a {
  text-decoration none
  color $color-blue1
}
button::-moz-focus-inner {
  border 0
}
a, button {
  -webkit-tap-highlight-color transparent
}
ul {
   list-style none
}
img {
   display block
}
